# common keys
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $runkey d

# programs
set $term foot
set $browser zen-browser

#keybinds
bindsym $mod+t exec $term
bindsym $mod+q kill
bindsym $mod+$runkey exec fuzzel
bindsym $mod+b exec $browser --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+Shift+s exec grim -g "$(slurp -d)" - | wl-copy

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

exec {
    polkit-qt6
    pipewire-pulse
    swaymsg workspace 0:0
}

input "type:touchpad" {
    tap enabled
    natural_scroll enabled
    dwt enabled
    accel_profile "flat" # disable mouse acceleration (enabled by default; to set it manually, use "adaptive" instead of "flat")
    pointer_accel 0.6 # set mouse sensitivity (between -1 and 1)
    scroll_factor 0.6
}

input "type:pointer" {
    accel_profile "flat"
}

default_border pixel 2

bindsym Ctrl+Shift+escape exec $term -e btop
floating_modifier $mod normal
bindsym $mod+Shift+c reload
bindsym XF86AudioRaiseVolume exec pw-volume change +5%
bindsym XF86AudioLowerVolume exec pw-volume change -5%
bindsym XF86AudioMute exec pw-volume mute toggle

bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

bindswitch lid:on output eDP-1 disable
bindswitch lid:off output eDP-1 enable

bindsym $mod+Left exec swaymsg exec swayrow.sh col - 1
bindsym $mod+Right exec swaymsg exec swayrow.sh col + 1
bindsym $mod+Up exec swaymsg exec swayrow.sh row - 1
bindsym $mod+Down exec swaymsg exec swayrow.sh row + 1
bindgesture swipe:left exec swaymsg exec swayrow col + 1
bindgesture swipe:right exec swayrow col - 1
bindgesture swipe:down exec swayrow row - 1
bindgesture swipe:up exec swayrow row + 1

bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+w floating toggle
mode "resize" {
bindsym $left resize shrink width 10px
bindsym $down resize grow height 10px
bindsym $up resize shrink height 10px
bindsym $right resize grow width 10px
bindsym Left resize shrink width 10px
bindsym Down resize grow height 10px
bindsym Up resize shrink height 10px
bindsym Right resize grow width 10px
bindsym Return mode "default"
bindsym Escape mode "default"
}
bar {
    position top
    status_command while date +'%Y-%m-%d %X'; do sleep 1; done
    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}
include /etc/sway/config.d/*
