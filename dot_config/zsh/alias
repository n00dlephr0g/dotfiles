# advanced ls commands
alias l='ls --group-directories-first'
alias ll='ls -AFho --group-directories-first'
alias la='ls -A --group-directories-first'


# program shortcuts
alias nf='neofetch'
alias ed='cd ..'
alias oct='octave-cli'
alias f='fzf'
alias python='python3'
alias cm='chezmoi'


# functional shortcuts
alias reload='source ~/.zshrc'
alias '?'='echo $?'
alias q='echo $?'
alias activatevenv='source .venv/bin/activate'
alias cpv='rsync -avh --info=progress2'
alias show='kitten icat'
alias gitlist='git ls-tree -r $(git branch | grep \* | cut -d ' ' -f2) --name-only'
alias calc='octave --eval'
alias host='cat /etc/hostname'
alias hotspot='nmcli device wifi rescan; nmcli device wifi connect Me'
alias eduroam='nmcli device wifi rescan; nmcli device wifi connect eduroam'

# chezmoi commands
alias edit='chezmoi edit --apply'
alias cmpull='chezmoi update --apply'
alias cmlist='chezmoi list --tree'

# yt-dlp shortcuts
alias dlsong='yt-dlp --config-locations $CONFDIR/ytdlp/music/song'
alias dlalbum='yt-dlp --config-locations $CONFDIR/ytdlp/music/album --cookies-from-browser firefox'
alias dlcd='yt-dlp --config-locations $CONFDIR/ytdlp/music/cd'

